<local:ConnectionLine x:Class="UMLEditort.Entities.CompositionLine"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UMLEditort.Entities"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300" Background="White">
    <Canvas x:Name="ArrowCanvas" RenderTransformOrigin="0.5,0.5">
        <Canvas.RenderTransform>
            <RotateTransform Angle="0"/>
        </Canvas.RenderTransform>
        <Rectangle x:Name="ArrowEndpoint" Width="21.4132" Height="21.4132" Stroke="Black" StrokeThickness="2" RenderTransformOrigin="0.5,0.5" Canvas.Left="4" Canvas.Top="5">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-46"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Line x:Name="ArrowLine" X1="30" X2="302" Y1="15" Y2="15" StrokeThickness="2" Stroke="Black"
                   HorizontalAlignment = "Left"
                   VerticalAlignment = "Top" Canvas.Left="-2"/>
    </Canvas>
</local:ConnectionLine>

<UserControl x:Class="UMLEditort.Entities.ClassObject"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UMLEditort.Entities"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100"
             Background="White">
    <Border BorderThickness="2" BorderBrush="Red">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" BorderThickness="0,0,0,1" BorderBrush="Red">
                <DockPanel>
                    <TextBlock x:Name="ObjectName" TextWrapping="Wrap" Text="TextBlock" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </DockPanel>
            </Border>
            <Border Grid.Row="1" BorderThickness="0,0,0,1" BorderBrush="Red"/>
            <Border Grid.Row="2" BorderThickness="0" BorderBrush="Red"/>
        </Grid>
    </Border>
</UserControl>
